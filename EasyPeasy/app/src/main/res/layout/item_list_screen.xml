<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6fff2"
    android:weightSum="1">

    <Button
        android:text="Add Food!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddFoodbutt"
        android:onClick="AddFoodClick"
        android:background="@android:color/holo_red_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletebutt"
        android:onClick="deleteclick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_dark"
        android:textStyle="normal|bold" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/deletebutt"
        android:layout_toStartOf="@+id/deletebutt"
        android:id="@+id/goHome"
        android:onClick="homebuttclick"
        android:background="@android:color/holo_red_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="Change Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updatename"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/goHome"
        android:layout_toStartOf="@+id/goHome"
        android:elevation="0dp"
        android:textStyle="normal|bold"
        android:onClick="updateName" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AddFoodbutt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/deletebutt"
        android:background="@drawable/easypeasy" />

</RelativeLayout>